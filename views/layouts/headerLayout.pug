//- Start headerTop
header
  nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
    .container-fluid
      a.navbar-brand(href='/') Blog Channel
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarCollapse.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-md-0
          li.nav-item
            a.nav-link.active(aria-current='page', href='/') Home
          li.nav-item
            .dropdown
              button#dropdownMenu2.btn.btn-secondary.dropdown-toggle(type='button', data-bs-toggle='dropdown', aria-expanded='false')
                | Blogs
              ul.dropdown-menu(aria-labelledby='dropdownMenu2')
                li
                  a.dropdown-item(href='/posts/listAll') All View
                li
                  a.dropdown-item(href='/posts/addPost') Add a Blog
                li
                  a.dropdown-item(href='#') Something else here
        form.d-flex
          input.form-control.me-2(type='search', placeholder='Search', aria-label='Search')
          button.btn.btn-outline-success(type='submit') Search
        .d-flex.flex-row-reverse.mx-2
          if session
            a#logout.btn.btn-light(href='/users/logout')
              i.fas.fa-sign-out-alt.me-2
              span logout
          else    
            a#login.btn.btn-light(href='/users/login')
              i.fas.fa-sign-out-alt.me-2
              span Login
          a#sigin.btn.btn-success.me-3(href='/users/register')
            i.fas.fa-plus-circle.me-2
            span Sigin
//- End headerTop  